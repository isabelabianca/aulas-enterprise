package br.com.fiap.pagamento;

public class CalcularParcela extends Pagamento {
	
//	public Calendar[] calcularData(Calendar data, int qtMeses) {
//		Calendar datas[] = 
//		
//		return ;
//	}
	
	public double calcularValor(int qtMeses, double valorContrato) {
		double valorJuros = 0;
		double valorFinal = 0;
		double valorParcela = valorContrato/qtMeses;
		
		for (int i=0, j=1; i<qtMeses; i++, j++) {
			valorJuros = valorParcela += 0.01 * j;
			valorFinal = valorJuros += 0.02;
		}
		
		return valorFinal;
	}
}
